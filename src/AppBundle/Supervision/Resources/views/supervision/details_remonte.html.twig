    {#<div class="status {% if r.status == 'fail' %}fail{% else %}success{% endif %}">#}
    {#{{ r.status|trans({},'synchro_msg') }}#}
    {#</div>#}
    {#</td>#}
    {#<td>{{ r.type|trans({},'synchro_msg') }}</td>#}
    {#</tr>#}
    {#{% endfor %}#}
    </tbody>
</table>