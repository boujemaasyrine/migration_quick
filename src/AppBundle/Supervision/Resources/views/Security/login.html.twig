{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/app/css/login.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block header %}
{% endblock %}
{% block base_heading %}
{% endblock %}

{% block base_body %}
    <div id="login_container" class=" card card-container" style="background-color: white;">
        <center>
            <img class="logo" style="height: 10rem;" src="{{ asset('bundles/app/images/logo.png') }}">
        </center>
        {% if error %}
            <div style="margin-top: 5px;" class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-warning-sign"></span>
                <span id="alertContent">
                    {{ error.messageKey|trans({},'security') }}
                </span>
            </div>
        {% endif %}
        <div id="messages" style="display: none;margin-top: 5px;" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-warning-sign"></span>
            <span id="alertContent"></span>
        </div>

        <form id="loginForm" class="form-signin" method="POST" action="{{ path('login_check') }}">
            <span id="reauth-email" class="reauth-email"></span>

            <div class="input-field" style="width: 90% !important;">
                <i class="material-icons prefix">account_circle</i>
                <input type="text" id="username" name="_username" value="" class="form-control"
                       placeholder="Nom d'utilisateur" required autofocus>
            </div>

            <div class="input-field" style="width: 90% !important;">
                <i class="material-icons prefix">lock</i>
                <input type="password" id="password" name="_password" class="form-control col s8"
                       placeholder="Mot de passe"
                       required>
            </div>

            <div id="remember" class="checkbox">
                <input id="rememberMe" type="checkbox" name="_remember_me"/>
                <label for="rememberMe" class="label" style="font-size: 1.5em !important;"> Rester connect√©</label>
            </div>
            <button id="login" class="btn btn-lg btn-block btn-signin white-text waves-effect waves-light"
                    style="background-color: #D3072A !important;     width: 90%; margin: auto;" type="submit">Se
                Connecter
            </button>
        </form>
        <div style="text-align: right; margin: auto; width: 90%; padding-top: 15px; font-size: 14px">
            <a href="{{ path('reset_password') }}"> {{ 'pw_forgotten'|trans() }} </a>
        </div>

    </div>
{% endblock %}

