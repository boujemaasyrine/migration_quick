<div class="detail-modal-body" style="padding: 5px;">
    <div class="row">
        <div class="col-modal col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <span class="label">{{ 'label.name' | trans([],'supervision') }}: </span>
            {{ category.name }}
        </div>
        <div class="col-modal col-lg-6 col-md-6 col-sm-6 col-xs-12" style="text-align: right;">
            <span class="label">{{ 'label.group' | trans([],'supervision') }}</span>
            {{ category.categoryGroup.name }}
        </div>
        {% if category.taxBe != null %}
            <div class="col-modal col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <span class="label">{{ 'category.list.tvaBel' | trans([],'supervision') }}</span>
                {{ category.taxBe }} %
            </div>
        {% endif %}
        {% if category.taxLux != null %}
            <div class="col-modal col-lg-6 col-md-6 col-sm-6 col-xs-12" style="; text-align: right;">
                <span class="label">{{ 'category.list.tvaLux' | trans([],'supervision') }} : </span>
                {{ category.taxLux }} %
            </div>
        {% endif %}
        <div class="col-modal col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <span class="label">{{ 'category.list.label_help' | trans([],'supervision') }} : </span>
            {% if category.eligible == true %} {{ 'keyword.yes' | trans([],'supervision') }}
            {% else %} {{ 'keyword.no' | trans([],'supervision') }}
            {% endif %}
        </div>
    </div>
</div>