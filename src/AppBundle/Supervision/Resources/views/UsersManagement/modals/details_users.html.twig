<div class="detail-modal-body">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-modal">
            <b>{{ 'users.username' | trans([],'supervision') }}:</b>
            {{ user.username }}
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-modal" style="; text-align: right;">
            <b>{{ 'label.mail' | trans([],'supervision') }}: </b>
            {{ user.email }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-modal">
            <b>{{ 'users.first_name' | trans([],'supervision') }}:</b>
            {{ user.firstName }}
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-modal" style="; text-align: right;">
            <b>{{ 'users.last_name' | trans([],'supervision') }}: </b>
            {{ user.lastName }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-modal">
            <b>{{ 'labels.role' | trans([],'supervision') }}: </b>
            {% for role in user.employeeRoles %}
                {% if role.type == constant("AppBundle\\Security\\Entity\\Role::CENTRAL_ROLE_TYPE")
                and role.label != constant("AppBundle\\Security\\Entity\\Role::ROLE_SUPERVISION") %}
                    {{ role.textLabel }}
                {% endif %}
            {% endfor %}
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="label">{{ 'users.list.eligible_restaurant'|trans([],'supervision') }}</span>
        </div>
        <div class="panel-body" style="padding: 0">
            <table id="user_restaurants_table" class="table table-striped table-bordered table-hover" cellspacing="0"
                   width="100%">
                <thead>
                <tr>
                    <th>{{ 'label.code' | trans([],'supervision') }}</th>
                    <th>{{ 'label.name' | trans([],'supervision') }}</th>
                    <th>{{ 'label.mail' | trans([],'supervision') }}</th>
                    <th>{{ 'label.manager' | trans([],'supervision') }}</th>
                    <th>{{ 'label.address' | trans([],'supervision') }}</th>
                    <th>{{ 'label.phone' | trans([],'supervision') }}</th>
                    <th>{{ 'label.type' | trans([],'supervision') }}</th>
                </tr>
                </thead>
                <tbody>
                {% for restaurant in user.eligibleRestaurants %}
                    <tr id="{{ restaurant.id }}">
                        <td>{{ restaurant.code }}</td>
                        <td>{{ restaurant.name }}</td>
                        <td>{{ restaurant.email }}</td>
                        <td>{{ restaurant.manager }}</td>
                        <td>{{ restaurant.address }}</td>
                        <td>{{ restaurant.phone }}</td>
                        <td>{{ restaurant.type }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>