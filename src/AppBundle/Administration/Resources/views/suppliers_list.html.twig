{% extends '@Administration/index_administration.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="application/javascript" src="{{ asset('src/js/Administration/administration.js') }}"></script>
    <script src="{{ asset('src/js/Administration/supplier_list.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block base_title %}
    {{ 'provider.list.title' | trans }}
{% endblock %}
{% block base_subtitle %}
    {{ parent() }} - {{ 'parameters.merchandise_management.title'|trans([], 'navbar') }}
{% endblock %}

{% block body %}
    <div class="filter-zone">
        <div class="panel panel-default">
            <div class="panel-heading"><span class="glyphicon glyphicon-filter"></span> {{ 'filter.label'|trans }}
            </div>
            <div class="panel-body" style="padding-top: 5px;">
                {{ form_start(form,{ 'method' : 'POST', 'attr': {'id': 'supplierFilterForm'} }) }}
                <div class="row" style="margin-bottom: 0;">

                    <div class="col-xs-6 col-sm-6 col-md-6 ">
                        {{ form_label(form.code) }}
                        {{ form_widget(form.code, { "attr": { "class": 'form-control' } }) }}
                    </div>

                    <div class="col-xs-6 col-sm-6 col-md-6 ">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name, { "attr": { "class": 'form-control' } }) }}
                    </div>

                </div>
                <div class="hidden">
                    {{ form_rest(form) }}
                </div>
                <div class="row" style="margin-bottom: 0;">
                    <div class="col s4 pull-right" style="text-align:right;">
                        <button type="button" id="reset-filter" class="btn waves-effect white black-text ">
                            <span class="glyphicon glyphicon-remove"></span>{{ "delete_filter"|trans }}
                        </button>
                        <button onclick="list_supplier.ajax.reload();" type="button" class="btn btn-primary">
                            <span style="color : white" class="glyphicon glyphicon-filter"></span> {{ 'filter.btn'|trans() }}
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">

            <div class="row">
                <div class="col-xs-12" style="padding-bottom: 15px; text-align: right">
                    <button class="btn btn-export btn-icon" type="button" id="export-btn">
                        {{ "btn.export"|trans }}
                    </button>
                </div>
            </div>

            <table id="supplier_list_table" class="table table-striped table-bordered table-hover" cellspacing="0"
                   width="100%">
                <thead>
                <tr>
                    <th>{{ 'label.code' | trans }}</th>
                    <th>{{ 'provider.list.provider' | trans }}</th>
                    <th>{{ 'provider.list.designation' | trans }}</th>
                    <th>{{ 'provider.list.address' | trans }}</th>
                    <th>{{ 'provider.list.phone' | trans }}</th>
                    <th>{{ 'label.mail' | trans }}</th>
                </tr>
                </thead>
                <tbody>

                </tbody>
            </table>

            <div class="form-zone"></div>
        </div>
    </div>

{% endblock %}
