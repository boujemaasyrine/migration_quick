{% extends '@Administration/index_administration.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="application/javascript" src="{{ asset('src/js/Administration/administration.js') }}"></script>
    <script src="{{ asset('src/js/Administration/article_list.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block base_title %}
    {{ 'article.list.title' | trans }}
{% endblock %}
{% block body %}
    <table id="article_list_table" class="table table-striped table-bordered table-hover" cellspacing="0"
           width="100%">
        <thead>
        <tr>
            <th>Code</th>
            <th>{{ 'article.list.label' | trans }}</th>
            <th>{{ 'keyword.price' | trans }}</th>
            <th>{{ 'article.list.frequence' | trans }}</th>
            <th>Inv</th>
            <th>{{ 'article.list.month' | trans }}</th>
            <th>Per</th>
            <th>Pch</th>
            <th>Hl</th>
            <th>{{ 'provider.list.action' | trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for a in articles %}
            <tr>
                <td>{{ a.id }}</td>
                <td>{{ a.label }}</td>
                <td>{{ a.price }}</td>
                <td>{{ a.freq }}</td>
                <td>{{ a.inv }}</td>
                <td>{{ a.mois }}</td>
                <td>{{ a.per }}</td>
                <td>{{ a.pch }}</td>
                <td>{{ a.hl }}</td>
                <td class="actions-btn">
                    <a href="#detail-article-mock" data-tooltip="DÃ©tails" data-position="top"
                       class="modal-trigger tooltipped glyphicon glyphicon-info-sign detail-btn"></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div id="detail-article-mock" class="modal" style="display: none">
        {% include '@Administration/modals/details_list_article.html.twig' %}
    </div>

    <div class="row">
        <div class="hidden-xs hidden-sm col-md-12">
            <div class="hidden-xs hidden-sm col-lg-3 col-md-3">
							<span class="shortcut-lab">
								<span class="keybored-key-icon">F10</span>{{ 'article.list.record' | trans }}</span>
            </div>
            <div class="hidden-xs hidden-sm col-lg-3 col-md-3">
							<span class="shortcut-lab">
                            <span class="keybored-key-icon">F2</span>{{ 'article.list.edit' | trans }}</span>
            </div>
            <div class="hidden-xs hidden-sm col-lg-3 col-md-3">
                        <span class="shortcut-lab">
                            <span class="keybored-key-icon">F3</span>{{ 'article.list.coefficient' | trans }}</span>
            </div>
            <div class="hidden-xs hidden-sm col-lg-3 col-md-3">
							<span class="shortcut-lab">
                            <span class="keybored-key-icon">F4</span>{{ 'article.list.actif' | trans }}</span>
            </div>
        </div>
    </div>
{% endblock %}

