{% extends('@General/exports/base_exports_2.html.twig') %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body, .label, .detail-body, th {
            font-size: 1.7rem !important;
        }
    </style>
{% endblock %}

{% block reportTitle %}
    <b style="font-size: 2.2rem !important;">
        {{ 'deposit.report.title'|trans }}
    </b>
    <div style="font-size: 2.2rem">
        {% if period.startDate|date('d/m/Y') == period.endDate|date('d/m/Y') %}
            {{ 'keyword.the'|trans ~ ' ' ~period.startDate|date('d/m/Y') }}
        {% else %}
            {{ 'keyword.from'|trans ~ ' ' ~ period.startDate|date('d/m/Y') ~ ' '~ 'keyword.to'|trans ~ ' ' ~ period.endDate|date('d/m/Y') }}
        {% endif %}
    </div>
{% endblock %}

{% block filterBlock %}
{% endblock %}

{% block body %}
    <div class="detail-body">
        {{ include('@Financial/Deposit/Report/exports/body.html.twig') }}
    </div>
{% endblock body %}