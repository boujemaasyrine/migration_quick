<div id="bank_card_container" class="col-xs-12" style="padding-top: 10px; padding-bottom: 10px;">
    {% if list is defined %}
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading" style="text-align: right;">
                    <span>
                        <span class="bank_card_total">
                            {{ form.vars.value.smallChest.calculateBankCardTotal()|number_format(2, ',', '') }}
                        </span>
                        <i class="glyphicon glyphicon-euro"></i>
                    </span>
                </div>
                <div class="panel-body">
                    <div class="col-xs-12">
                        <div class="">
                            {% for bankCard in form.smallChest.vars.value.bankCardCounts %}
                                <div class="row bankCardRow">
                                    <div class="col-xs-6">
                                        <span class="text-muted">{{ bankCard.cardName }}</span>
                                    </div>
                                    <div class="col-xs-6">
                                        <span class="text-muted bold bank_card_amount"> {{ form.vars.value.smallChest.calculateTheoricalBankCardTotal(bankCard.idPayment)|number_format(2, ',', '') }}
                                            <i class="glyphicon glyphicon-euro"></i>
                                        </span>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
