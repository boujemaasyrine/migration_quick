<div class="panel panel-default">
    <div class="panel-body">
        {% form_theme form ':form_layouts:horizontal_layout.html.twig' %}
        {{ form_start(form,{ 'method' : 'POST', 'attr': {'id': 'recipeTicketForm'} }) }}
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.label) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.date) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.amount) }}
            </div>
        </div>
        <div class="hidden">
            {{ form_rest(form) }}
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-md-12 col-xs-12">

                <button class="btn btn-validate btn-icon pull-right" type="submit"
                        id="btn-validate">
                    {{ 'btn.validate' | trans }}
                </button>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
</div>
