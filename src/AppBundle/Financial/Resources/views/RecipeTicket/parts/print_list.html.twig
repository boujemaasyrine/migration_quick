{% extends('@General/exports/base_exports_2.html.twig') %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body, .label, .detail-body, th {
            font-size: 1.7rem !important;
        }
    </style>
{% endblock %}
{% block reportTitle %}
    <b style="font-size: 2.2rem !important;">{{ title }}</b>
{% endblock %}

{% block filterBlock %}
    <br><br>
    <div class="row detail-body">
        <div class="col-xs-6" style=" padding-bottom: 15px">
            <b>{{ 'keyword.from' | trans }}:</b>
            {{ filter.startDate }}
        </div>
        <div class="col-xs-6" style=" padding-bottom: 15px; text-align: right">
            <b>{{ 'label.manager' | trans }}:</b>
            {{ filter.owner }}
        </div>
        <div class="col-xs-6" style=" padding-bottom: 15px">
            <b>{{ 'keyword.to' | trans }}:</b>
            {{ filter.endDate }}
        </div>
        <div class="col-xs-6" style=" padding-bottom: 15px; text-align: right">
            <b>{{ 'keyword.label' | trans }}:</b>
            {{ filter.label }}
        </div>
    </div>
{% endblock %}

{% block body %}
    <style>
        .label {
            color: #000;
        }

        .panel-heading .label {
            font-size: 1.6rem;
        }

        .col-modal {
            margin-bottom: 15px;
        }

        th {
            font-size: 14px;
        }
    </style>
    <br>
    <table id="expenses_table" class="table table-striped table-bordered table-hover" cellspacing="0"
           width="100%">
        <thead>
        <tr>
            <th>{{ 'label.reference'|trans }}</th>
            <th>{{ 'keyword.label'|trans }}</th>
            <th>{{ 'keyword.date'|trans }}</th>
            <th>{{ 'label.manager'|trans }}</th>
            <th>{{ 'keyword.amount'|trans }} (&euro;)</th>
        </tr>
        </thead>
        <tbody>
        {% for recipeTicket in recipeTickets %}
            <tr>
                <td>{{ recipeTicket.id }}</td>
                <td>{{ recipeTicket.label|trans }}</td>
                <td>{{ recipeTicket.date }}</td>
                <td>{{ recipeTicket.owner }}</td>
                <td style="text-align: right">{{ recipeTicket.amount|number_format(2, ',', ' ') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock body %}