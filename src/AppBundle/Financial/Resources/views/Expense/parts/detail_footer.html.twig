{% if(expense.deposit != null and expense.deposit.envelopes|length > 0) and download is not defined %}
    <a class="btn btn-validate pull-right"
       href="{{ path('deposit_report', { 'id' : expense.deposit.id }) }}?download=true">
        <span class="glyphicon glyphicon-download"></span>
        &nbsp; {{ 'deposit.report.download_report'|trans() }}
    </a>
{% endif %}

<a href="{{ path('expense_detail_print', {'expense' : expense.id}) }}" class='btn btn-print btn-icon'
   style="margin-right: 15px">
    {{ 'shortcut.labels.print'|trans() }}</a>

<button type='button' class='btn btn-cancel' data-dismiss='modal' style="margin-right: 15px">
    {{ 'keyword.close'|trans() }}
</button>