<div class="row" style="margin-bottom: 0px;">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" data-user="{{ staff.id }}">
        {% if staff.fromCentral != true %}
            <button class="btn waves-effect text-black" {{ securityChecker.disableBtn('attribute_role') }}
                    id="attribute-role">
            <span>
                {% if ( staff.employeeRoles | length ) > 0 %}
                    {{ 'roles.edit_role'|trans() }}
                {% else %}
                    {{ 'staff.list.attribute_role'|trans() }}
                {% endif %}
                 </span>
            </button>
        {% endif %}
            <button type="submit"
                    class="btn waves-effect orange text-black " {{ securityChecker.disableBtn('default_password') }}
                    id="default-password" style="margin-right: 10px;">
                <span>
                    {% if (staff.password is null or staff.password is empty) %}
                        {{ 'staff.list.default_password'|trans() }}
                    {% else %}
                        {{ 'staff.list.reset_password'|trans() }}
                    {% endif %}
                </span>
            </button>
            <button type="submit" class="btn waves-effect blue text-black " {{ securityChecker.disableBtn('change_email') }}
                    id="change-email" style="margin-right: 10px;">
                <span>{{ 'staff.list.change_email'|trans() }}</span>
            </button>
        <button type="button" class="btn btn-cancel" data-dismiss="modal"
                style="margin-right: 10px;">{{ 'btn.close' | trans }}</button>
    </div>
</div>