{% extends('@General/exports/base_exports.html.twig') %}

{% block reportTitle %}
    <h4> {{ 'br_report.responsible_report.title' |trans }}</h4>
{% endblock %}

{% block filterBlock %}
    <div class="col-xs-2 input-field">
        <label for="startDate">{{ 'keyword.from'|trans }} :</label>
        <span class="text-muted">
            {{ data.startDate }}
        </span>
    </div>
    <div class="col-xs-2 input-field">
        <label for="endDate">{{ 'keyword.to'|trans }}: </label>
        <span class="text-muted">
            {{ data.endDate }}
        </span>
    </div>

    <div class="col-xs-4">
        <label for="selection">{{ 'keyword.from'|trans }}: </label>
        <span class="text-muted">

            {% if data.startHour is defined and not null %}
                {{ data.startHour }} H
            {% else %}
                00H
            {% endif %}

        </span>
    </div>
    <div class="col-xs-4">
        <label for="selection"> {{ 'br_report.to'|trans }}: </label>
        <span class="text-muted">
            {% if data.endHour is defined and not null %}
                {{ data.endHour }} H
            {% else %}
                23H
            {% endif %}

        </span>
    </div>
    <div class="col-xs-4">
        <label for="selection"> {{ 'br_report.responsible' | trans }}: </label>
        <span class="text-muted">
            {% if data.cashier is defined and not null %}
                {{ data.cashier }}
            {% else %}
                {{ 'br_report.all' | trans }}
            {% endif %}
        </span>
    </div>
    <div class="col-xs-4">
        <label for="selection"> {{ 'br_report.amount_br_min' | trans }}: </label>
        <span class="text-muted">
            {% if data.amountMin is defined and not null %}
                {{ data.amountMin }}
            {% else %}
                --
            {% endif %}

        </span>
    </div>

    <div class="col-xs-4">
        <label for="selection"> {{ 'br_report.amount_br_max' | trans }}: </label>
        <span class="text-muted">
            {% if data.amountMax is defined and not null %}
                {{ data.amountMax }}
            {% else %}
                --
            {% endif %}

        </span>
    </div>

    <div class="col-xs-4">
        <label for="selection"> {{ 'br_report.amount_ticket_min' | trans }}: </label>
        <span class="text-muted">
            {% if data.ticketMin is defined and not null %}
                {{ data.ticketMin }}
            {% else %}
                --
            {% endif %}

        </span>
    </div>

    <div class="col-xs-4">
        <label for="selection"> {{ 'br_report.amount_ticket_max' | trans }}: </label>
        <span class="text-muted">
            {% if data.ticketMax is defined and not null %}
                {{ data.ticketMax }}
            {% else %}
                --
            {% endif %}

        </span>
    </div>
{% endblock %}

{% block body %}
    {{ include('@Report/BR/responsible/report_br.html.twig') }}
{% endblock body %}