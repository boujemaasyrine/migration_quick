{% extends('@Report/base_exports.html.twig') %}

{% block reportTitle %}
    <h4> {{ 'ca_per_tva.title' |trans }}</h4>
{% endblock %}

{% block filterBlock %}

    <div class="col-xs-2 input-field">
        <label for="startDate">{{ 'keyword.from'|trans }} :</label>
        <span class="text-muted">
            {{ filter.startDate|date("d/m/Y") }}
        </span>
    </div>
    <div class="col-xs-2 input-field">
        <label for="endDate">{{ 'keyword.to'|trans }}: </label>
        <span class="text-muted">
            {{ filter.endDate|date("d/m/Y") }}
        </span>
    </div>
    <br>
{% endblock %}

{% block body %}
    <div class="pdf_export">
        {{ include('@Report/CaPerTva/report_ca_per_tva.html.twig') }}
    </div>
{% endblock body %}