<div class="row loss-recap-table-row">
    <div class="container-fluid">
        <table id="loss-entry-table" class="table table-striped">
            <thead>
            <tr id="loss-recap-table-head">
                <th>{{ 'label.code' | trans }}</th>
                <th style="width: 100px;">{{ 'keyword.article' | trans }}</th>
                <th>{{ 'keyword.total' | trans }}</th>
                {% if loss.type == 'article' %}
                    <th>Saisie1</th>
                    <th>Saisie2</th>
                    <th>Saisie3</th>
                {% else %}
                    <th>11h</th>
                    <th>12h</th>
                    <th>13h</th>
                    <th>14h</th>
                    <th>15h</th>
                    <th>16h</th>
                    <th>17h</th>
                    <th>18h</th>
                    <th>19h</th>
                    <th>20h</th>
                    <th>21h</th>
                    <th>22h</th>
                {% endif %}

            </tr>
            </thead>
            <tbody id="loss_list_article">
            {% for line in loss.lossLine %}
                <tr id="new-line">
                    <td>{{ line.getProduct.id }}</td>
                    <td>{{ line.getProduct.name }}</td>
                    <td>{{ line.totalLoss }}</td>
                    {% for type in line.getLossLineType %}
                        <td>{{ type.value }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <button style="margin-right: 5px;" onclick="PrintElem(getElementById('body'))"
            class="btn color-4 lighten-1 white-text pull-right waves-effect waves-light">{{ 'shortcut.labels.print' | trans }}
    </button>
</div>
