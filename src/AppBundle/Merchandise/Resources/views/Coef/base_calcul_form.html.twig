{{ form_start(form) }}
<div class="row">
    <div class="col-sm-2 col-md-1" style="padding-top: 20px;">
        <label> {{ 'period_label'|trans() }} : </label>
    </div>
    <div class="col-sm-5">
        <label class="active required"> {{ 'from_label'|trans() }} : </label>
        {{ form_widget(form.startDate,{ 'attr' : { 'class' : 'datepicker form-control'  } }) }}
        {{ form_errors(form.startDate) }}
    </div>
    <div class="col-sm-5">
        <label class="active required"> {{ 'to_label'|trans() }} : </label>
        {{ form_widget(form.endDate,{ 'attr' : { 'class' : 'datepicker form-control'  } }) }}
        {{ form_errors(form.endDate) }}
    </div>
</div>
<div class="row">
    <div class="col-sm-2 col-md-1" style="padding-top: 20px;">
        <label> {{ 'loss_with'|trans() }} : </label>
    </div>
    <div class="col-sm-5" style="padding-top: 20px;">
        <input type="checkbox" name="loss" value="1">
    </div>
</div>
{{ form_end(form) }}