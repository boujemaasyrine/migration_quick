<div class="panel-body">

    <div class="row">
        <div class="col-xs-12">
            <button
                    {% if type == 'articles_loss_model' %}
                        {{ securityChecker.disableBtn('add_loss_sheet_article') }}
                    {% else %}
                        {{ securityChecker.disableBtn('add_loss_sheet_pf') }}
                    {% endif %}
                    id="btnAddNewSheet" class="btn btn-add btn-icon">
                {{ 'btn.add'|trans }}
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h3>{{ 'sheet_model.list.title'|trans }} </h3>
            <table id="sheet-model-table" class="table table-striped table-responsive table-bordered"
                   style="width: 100%"
                   data-template="
                   <a href='{{ path('export_sheet_model', {'sheetModel': '_id_'}) }}' id='print_btn' class='btn btn-print btn-icon btn-xs'> {{ 'btn.print'|trans }}</a>
                   <button
                          {% if type == 'articles_loss_model' %}
                              {{ securityChecker.disableBtn('edit_loss_sheet_article') }}
                          {% else %}
                              {{ securityChecker.disableBtn('edit_loss_sheet_pf') }}
                          {% endif %}
                   data-id='_id_' class='btnEditSheetModel btn btn-modify btn-icon btn-xs'>{{ 'btn.edit'|trans }}</button>
                   <button
                          {% if type == 'articles_loss_model' %}
                              {{ securityChecker.disableBtn('delete_loss_sheet_article') }}
                          {% else %}
                              {{ securityChecker.disableBtn('delete_loss_sheet_pf') }}
                          {% endif %}
                    data-id='_id_' sheet-label='_sheet_label_' data-delete-url='{{ path('api_delete_sheet_model', {'sheetModel': '_id_' }) }}' class='removeSheetModel btn btn-delete btn-icon btn-xs'>{{ 'btn.delete'|trans }}</button>
                   ">
                <thead>
                <tr>
                    <th>{{ 'sheet_model.list.code'|trans }}</th>
                    <th>{{ 'sheet_model.list.label'|trans }}</th>
                    <th>{{ 'sheet_model.list.action'|trans }}</th>
                </tr>
                </thead>

                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
